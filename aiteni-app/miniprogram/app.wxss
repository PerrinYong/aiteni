/**app.wxss - 全局样式**/
page {
  --primary-blue: #1D7CF2;
  --primary-blue-soft: #2A8CFF;
  --primary-green: #1FA27A;
  --tennis-yellow: #FFD84A;
  --bg-gray: #F5F7FA;
  --card-white: #FFFFFF;
  --text-main: #1F2933;
  --text-sub: #6B7280;
  --border-gray: #E5E7EB;
  --success: #16A34A;
  --warning: #F97316;
  --danger: #DC2626;
  
  background: var(--bg-gray);
  color: var(--text-main);
  font-family: -apple-system, BlinkMacSystemFont, "PingFang SC", "HarmonyOS Sans", "Segoe UI", sans-serif;
  font-size: 28rpx;
  line-height: 1.5;
}

/* 通用容器 */
.container {
  width: 100%;
  min-height: 100vh;
  background: var(--bg-gray);
}

.page-wrapper {
  padding: 24rpx 32rpx 48rpx;
}

/* 卡片样式 */
.card {
  background: var(--card-white);
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 16rpx 40rpx rgba(15, 23, 42, 0.08);
  margin-bottom: 32rpx;
}

.card-soft {
  box-shadow: 0 12rpx 32rpx rgba(15, 23, 42, 0.06);
}

/* 文本样式 */
.h1 {
  font-size: 48rpx;
  font-weight: 700;
  line-height: 1.3;
}

.h2 {
  font-size: 40rpx;
  font-weight: 700;
  line-height: 1.3;
}

.h3 {
  font-size: 32rpx;
  font-weight: 600;
  line-height: 1.4;
}

.body {
  font-size: 28rpx;
  line-height: 1.5;
}

.caption {
  font-size: 24rpx;
  line-height: 1.4;
}

.text-sub {
  color: var(--text-sub);
}

/* 按钮样式 */
button {
  background: initial;
  padding: 0;
  border: none;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}

.btn-primary {
  width: 100%;
  height: 88rpx;
  border-radius: 999rpx;
  background: var(--primary-blue);
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 16rpx 40rpx rgba(37, 99, 235, 0.35);
  transition: all 0.12s ease;
}

.btn-primary:active {
  transform: scale(0.96);
  background: #1557B8;
  box-shadow: 0 8rpx 28rpx rgba(37, 99, 235, 0.5);
}

.btn-secondary {
  width: 100%;
  height: 88rpx;
  border-radius: 999rpx;
  background: transparent;
  color: var(--primary-blue);
  font-size: 28rpx;
  font-weight: 600;
  border: 2rpx solid var(--primary-blue);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.12s ease;
}

.btn-secondary:active {
  background: rgba(29, 124, 242, 0.05);
}

/* Tag标签 */
.chip {
  display: inline-flex;
  align-items: center;
  height: 48rpx;
  padding: 0 20rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

.chip-blue {
  background: rgba(29, 124, 242, 0.1);
  color: var(--primary-blue);
}

.chip-green {
  background: rgba(31, 162, 122, 0.1);
  color: var(--primary-green);
}

.chip-yellow {
  background: rgba(255, 216, 74, 0.2);
  color: #B8860B;
}

/* 加载动画 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--border-gray);
  border-top-color: var(--primary-blue);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 24rpx;
  color: var(--text-sub);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 96rpx;
  opacity: 0.3;
}

.empty-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: var(--text-sub);
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}