/* pages/result/result.wxss */

/* 根容器（使用全局.page-container类） */
.page-container {
  min-height: 100vh;
  background: var(--bg-gray);
  box-sizing: border-box;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

/* 结果内容 */
.result-content {
  padding: 24rpx 32rpx 48rpx;
}

/* Hero卡片 */
.card-hero {
  background: radial-gradient(circle at 0% 0%, #4DA4FF 0, var(--primary-blue) 45%, var(--primary-blue-soft) 100%);
  color: #ffffff;
  position: relative;
  overflow: hidden;
}

.card-hero::after {
  content: "";
  position: absolute;
  left: -32rpx;
  right: -32rpx;
  bottom: 32rpx;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.8);
}

.card-hero::before {
  content: "";
  position: absolute;
  left: 144rpx;
  bottom: 0;
  top: 80rpx;
  width: 4rpx;
  background: rgba(255, 255, 255, 0.4);
}

.hero-ball-shadow {
  position: absolute;
  right: -80rpx;
  top: -40rpx;
  width: 360rpx;
  height: 360rpx;
  border-radius: 50%;
  background: radial-gradient(circle at 30% 25%, #FFEFA3 0, var(--tennis-yellow) 52%, #F4C938 100%);
  opacity: 0.18;
}

.card-summary {
  display: flex;
  gap: 32rpx;
  position: relative;
  z-index: 1;
}

.summary-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.summary-level-title {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.summary-level-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.chip-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.chip-blue {
  background: rgba(255, 255, 255, 0.18);
  color: #EFF6FF;
}

.summary-note {
  margin-top: 16rpx;
  opacity: 0.9;
}

.summary-right {
  width: 176rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-between;
}

.badge-level {
  width: 144rpx;
  height: 144rpx;
  border-radius: 999rpx;
  background: var(--tennis-yellow);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 0 12rpx 28rpx rgba(180, 137, 0, 0.45);
}

.badge-level-main {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-main);
}

.badge-level-sub {
  font-size: 20rpx;
  letter-spacing: 0.08em;
  color: var(--text-main);
  text-transform: uppercase;
}

.badge-ball {
  position: absolute;
  right: -12rpx;
  bottom: -12rpx;
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: #FFE899;
  box-shadow: 0 4rpx 8rpx rgba(148, 98, 0, 0.35);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}

/* 分割线 */
.section-divider {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin: 32rpx 0 20rpx;
}

.section-divider-title {
  font-size: 32rpx;
  font-weight: 600;
}

.section-divider-line {
  flex: 1;
  height: 2rpx;
  background: var(--border-gray);
}

/* 卡片标题 */
.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.card-header-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.emoji-icon {
  font-size: 40rpx;
}

.status-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.status-dot-green {
  background: var(--primary-green);
}

.status-dot-orange {
  background: var(--warning);
}

/* 列表 */
.list {
  margin: 0;
  padding: 0;
}

.list-item {
  padding: 20rpx 0;
  display: flex;
  gap: 20rpx;
}

.list-item.has-border {
  border-top: 1rpx solid var(--border-gray);
}

.list-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  flex-shrink: 0;
}

.list-icon-adv {
  background: rgba(31, 162, 122, 0.08);
}

.list-icon-weak {
  background: rgba(249, 115, 22, 0.08);
}

.list-body {
  flex: 1;
}

.list-text-main {
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
}

.list-text-sub {
  font-size: 28rpx;
  color: #4B5563;
  line-height: 1.5;
  display: block;
}

/* Tags */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 0 16rpx;
  height: 40rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

.tag-strong {
  background: rgba(22, 163, 74, 0.12);
  color: var(--success);
}

.tag-weak {
  background: rgba(220, 38, 38, 0.08);
  color: var(--danger);
}

.tag-balance {
  background: #E5E7EB;
  color: var(--text-sub);
}

.hint-text {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: var(--text-sub);
  line-height: 1.5;
}

/* 各维度详情 */
.dimensions-list {
  margin-top: 8rpx;
}

.dimension-row {
  border-radius: 24rpx;
  overflow: hidden;
  background: #FFFFFF;
  border: 2rpx solid var(--border-gray);
  margin-bottom: 16rpx;
}

.dimension-main {
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: #FFFFFF;
}

.dimension-info {
  flex: 1;
}

.dimension-name {
  font-size: 28rpx;
  font-weight: 500;
  display: block;
}

.dimension-sub {
  font-size: 24rpx;
  color: var(--text-sub);
  margin-top: 4rpx;
  display: block;
}

.dimension-tag {
  margin-left: 16rpx;
}

.chevron {
  width: 36rpx;
  height: 36rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #9CA3AF;
  transition: transform 0.2s ease;
}

.dimension-detail {
  background: var(--bg-gray);
  padding: 0 24rpx;
  max-height: 0;
  overflow: hidden;
  opacity: 0;
  transition: max-height 0.24s ease, opacity 0.2s ease, padding-top 0.2s ease, padding-bottom 0.2s ease;
}

.dimension-detail-inner {
  padding: 16rpx 0 20rpx;
  font-size: 28rpx;
  color: #4B5563;
  line-height: 1.5;
}

.dimension-row.open .dimension-detail {
  max-height: 800rpx;
  opacity: 1;
  padding-top: 4rpx;
  padding-bottom: 16rpx;
}

.dimension-row.open .chevron {
  transform: rotate(180deg);
}

/* 操作区域 */
.action-area {
  margin-top: 16rpx;
  text-align: left;
}

.action-text {
  font-size: 28rpx;
  color: var(--text-sub);
  margin-bottom: 24rpx;
  display: block;
  line-height: 1.5;
}

.btn-text {
  margin-top: 16rpx;
  background: none;
  border: none;
  color: var(--primary-blue);
  font-size: 28rpx;
  font-weight: 500;
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  width: auto;
  height: auto;
  padding: 0;
}

.btn-text-icon {
  font-size: 32rpx;
  transform: translateY(2rpx);
}
