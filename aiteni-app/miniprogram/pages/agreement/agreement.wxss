/* pages/agreement/agreement.wxss */
.page-container {
  min-height: 100vh;
  background: var(--bg-gray);
  box-sizing: border-box;
  padding-top: 20rpx;
}

.agreement-content {
  height: calc(100vh - 88rpx);
  padding: 40rpx 32rpx;
  box-sizing: border-box;
}

.agreement-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.agreement-title {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--text-main);
  text-align: center;
  margin-bottom: 16rpx;
}

.agreement-update-time {
  font-size: 24rpx;
  color: var(--text-sub);
  text-align: center;
  margin-bottom: 48rpx;
}

.agreement-paragraph {
  margin-bottom: 40rpx;
}

.paragraph-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.paragraph-subtitle {
  display: inline-block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-top: 16rpx;
  margin-bottom: 12rpx;
}

.paragraph-content {
  display: block;
  font-size: 28rpx;
  color: var(--text-main);
  line-height: 1.8;
  margin-bottom: 16rpx;
  text-align: justify;
}

.paragraph-list {
  display: block;
  font-size: 28rpx;
  color: var(--text-main);
  line-height: 1.8;
  margin-bottom: 12rpx;
  padding-left: 24rpx;
  text-align: justify;
}

