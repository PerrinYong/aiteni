/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: var(--bg-gray);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
  box-sizing: border-box;
  position: relative;
}

/* 返回按钮 */
.back-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  z-index: 10;
}

.back-icon {
  font-size: 36rpx;
  color: var(--text-main);
  font-weight: 300;
}

/* 头部 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo-box {
  width: 160rpx;
  height: 160rpx;
  background: #FFFFFF;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
  box-shadow: 0 16rpx 40rpx rgba(29, 124, 242, 0.1);
}

.app-logo {
  font-size: 80rpx;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.app-name {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 12rpx;
}

.app-desc {
  font-size: 26rpx;
  color: var(--text-sub);
}

/* 登录提示（第一阶段） */
.login-prompt {
  width: 100%;
  margin-top: 60rpx;
}

.prompt-card {
  text-align: center;
  padding: 80rpx 48rpx;
}

.prompt-icon {
  font-size: 100rpx;
  margin-bottom: 32rpx;
}

.prompt-title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 16rpx;
}

.prompt-desc {
  font-size: 28rpx;
  color: var(--text-sub);
  line-height: 1.6;
  margin-bottom: 48rpx;
}

.login-start-btn {
  width: 100%;
  margin-bottom: 24rpx;
}

.cancel-btn {
  width: 100%;
}

/* 登录表单（第二阶段） */
.login-form-wrapper {
  width: 100%;
}

.login-form {
  width: 100%;
  padding: 48rpx 32rpx;
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 28rpx;
  color: var(--text-main);
  font-weight: 600;
  margin-bottom: 20rpx;
}

/* 头像选择 */
.avatar-wrapper {
  width: 100%;
  padding: 20rpx 0;
  background: transparent;
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-wrapper::after { border: none; }

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid var(--primary-blue);
  background-color: #F5F7FA;
  margin-bottom: 16rpx;
}

.avatar-tip {
  font-size: 24rpx;
  color: var(--text-sub);
}

/* 昵称输入 */
.nickname-wrapper {
  background: #F5F7FA;
  border-radius: 16rpx;
  padding: 0 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.nickname-wrapper:active {
  background: #EFF6FF;
  border-color: var(--primary-blue);
}

.nickname-input {
  height: 88rpx;
  font-size: 30rpx;
  color: var(--text-main);
}

.nickname-hint {
  font-size: 22rpx;
  color: var(--text-sub);
  margin-top: 12rpx;
}

/* 登录按钮 */
.login-btn {
  margin-top: 48rpx;
  width: 100%;
}

.login-btn.disabled {
  opacity: 0.6;
  background: var(--text-sub);
  box-shadow: none;
}

/* 用户协议 */
.agreement {
  margin-top: auto;
  padding: 0 20rpx 40rpx;
  display: flex;
  justify-content: center;
}

.agreement-checkbox-wrapper {
  display: flex;
  align-items: flex-start;
  width: 100%;
  max-width: 600rpx;
}

.agreement-checkbox {
  margin-right: 10rpx;
  /* 通过负 margin 修正 checkbox 原始占位导致的垂直对齐偏差 */
  margin-top: -6rpx;
  flex-shrink: 0;
  /* 缩小 checkbox 大小以匹配 24rpx 的文字 */
  transform: scale(0.7);
}

.agreement-text-wrapper {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  line-height: 1.6;
  font-size: 24rpx;
}

/* 隐私协议弹窗 */
.privacy-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.privacy-modal {
  width: 600rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  animation: modalSlideIn 0.3s ease;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.privacy-modal-title {
  padding: 40rpx 32rpx 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
  text-align: center;
}

.privacy-modal-content {
  padding: 0 32rpx 32rpx;
  font-size: 28rpx;
  line-height: 1.8;
  color: var(--text-main);
}

.privacy-text {
  color: var(--text-main);
}

.privacy-link {
  color: var(--primary-blue);
  font-weight: 500;
  text-decoration: underline;
  margin: 0 4rpx;
}

.privacy-modal-footer {
  display: flex;
  border-top: 1rpx solid var(--border-gray);
}

.privacy-modal-btn {
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
}

.privacy-modal-btn.cancel {
  color: var(--text-sub);
  border-right: 1rpx solid var(--border-gray);
}

.privacy-modal-btn.confirm {
  color: var(--primary-blue);
}

.agreement-text {
  font-size: 24rpx;
  color: var(--text-sub);
  line-height: 1.6;
}

.agreement-link {
  font-size: 24rpx;
  color: var(--primary-blue);
  font-weight: 500;
  text-decoration: underline;
  margin: 0 4rpx;
  line-height: 1.6;
}

