/* pages/questionnaire/questionnaire.wxss */

/* 根容器（使用全局.page-container类） */
.page-container {
  min-height: 100vh;
  background: var(--bg-gray);
  box-sizing: border-box;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

/* 问卷内容 */
.questionnaire-content {
  padding: 24rpx 32rpx 48rpx;
}

/* 进度条 */
.progress-bar-container {
  margin-bottom: 32rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: var(--border-gray);
  border-radius: 999rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--primary-blue), var(--primary-blue-soft));
  border-radius: 999rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: var(--text-sub);
  display: block;
  text-align: right;
}

/* 问题卡片 */
.question-card {
  margin-bottom: 32rpx;
}

.question-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.question-badge {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--primary-blue), var(--primary-blue-soft));
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(29, 124, 242, 0.3);
}

.question-number {
  font-size: 28rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.question-dimension {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.dimension-tag {
  font-size: 22rpx;
}

.question-content {
  margin-bottom: 32rpx;
}

.question-text {
  font-size: 32rpx;
  font-weight: 500;
  line-height: 1.6;
  color: var(--text-main);
  display: block;
}

/* 选项列表 */
.options-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.option-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 24rpx;
  background: var(--bg-gray);
  border-radius: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.option-item:active {
  transform: scale(0.98);
}

.option-item.selected {
  background: rgba(29, 124, 242, 0.05);
  border-color: var(--primary-blue);
  box-shadow: 0 8rpx 20rpx rgba(29, 124, 242, 0.15);
}

.option-radio {
  flex-shrink: 0;
  margin-top: 4rpx;
}

.radio-unchecked {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 3rpx solid var(--border-gray);
  background: var(--card-white);
}

.radio-checked {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: var(--primary-blue);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(29, 124, 242, 0.4);
}

.radio-icon {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 700;
}

.option-content {
  flex: 1;
}

.option-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-main);
  display: block;
}

.option-item.selected .option-text {
  font-weight: 500;
  color: var(--primary-blue);
}

/* 底部导航 */
.bottom-nav {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.nav-btn {
  flex: 1;
}

.btn-primary.disabled {
  opacity: 0.4;
  box-shadow: none;
}

/* 提示信息 */
.hint-text {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 24rpx;
  font-size: 24rpx;
  color: var(--text-sub);
  text-align: center;
}

.hint-icon {
  font-size: 32rpx;
}
