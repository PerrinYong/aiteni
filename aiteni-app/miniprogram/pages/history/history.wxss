/* pages/history/history.wxss */

.container {
  min-height: 100vh;
  background: var(--bg-gray);
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: var(--card-white);
  border-bottom: 1rpx solid var(--border-gray);
}

.navbar-content {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 0 32rpx;
}

.brand-mark {
  position: relative;
  width: 40rpx;
  height: 40rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, var(--primary-blue), var(--primary-blue-soft));
  overflow: hidden;
}

.brand-mark__i {
  position: absolute;
  left: 8rpx;
  top: 8rpx;
  width: 8rpx;
  height: 16rpx;
  border-radius: 999rpx;
  background: #ffffff;
  box-shadow: 0 16rpx 0 #ffffff;
}

.brand-mark__ball {
  position: absolute;
  right: 6rpx;
  top: 10rpx;
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background: var(--tennis-yellow);
  box-shadow: 0 14rpx 0 rgba(255, 216, 74, 0.5);
}

.brand-mark__court {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 8rpx;
  height: 4rpx;
  background: #ffffff;
}

.brand-mark__court::before {
  content: "";
  position: absolute;
  left: 14rpx;
  top: -16rpx;
  bottom: 0;
  width: 4rpx;
  background: #ffffff;
}

.navbar-title {
  font-size: 32rpx;
  font-weight: 600;
}

/* 内容区 */
.page-content {
  padding: 24rpx 32rpx 48rpx;
}

/* 历史记录列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-card {
  padding: 24rpx;
}

.history-card:active {
  transform: scale(0.98);
  transition: transform 0.1s ease;
}

.history-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.history-level {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.level-badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: var(--tennis-yellow);
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-main);
  box-shadow: 0 8rpx 20rpx rgba(180, 137, 0, 0.3);
}

.level-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
}

.history-date {
  font-size: 24rpx;
  color: var(--text-sub);
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.history-footer {
  display: flex;
  justify-content: flex-end;
}

.view-detail {
  font-size: 26rpx;
  color: var(--primary-blue);
  font-weight: 500;
}
